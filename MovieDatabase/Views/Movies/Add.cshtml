@model MovieDatabase.Models.Movie

@{
    ViewData["Title"] = "Add Movie";
}

<div class="page-card">
    <h1 class="mb-4">Add a Movie to the Collection</h1>

    <form asp-action="Add" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Director" class="form-label"></label>
        <input asp-for="Director" class="form-control" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <select asp-for="Rating" class="form-select">
            <option value="">-- Select Rating --</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Edited" class="form-label">Edited</label>
        <select asp-for="Edited" class="form-select">
            <option value="">-- Select --</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LentTo" class="form-label"></label>
        <input asp-for="LentTo" class="form-control" />
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Movie</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

