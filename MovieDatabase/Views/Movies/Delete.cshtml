@model MovieDatabase.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h1 class="mb-4 text-danger">Delete Movie</h1>

<p class="lead">Are you sure you want to delete this movie from the collection?</p>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">@Model.Title (@Model.Year)</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.Category</h6>
        <p class="card-text mb-1"><strong>Director:</strong> @Model.Director</p>
        <p class="card-text mb-1"><strong>Rating:</strong> @Model.Rating</p>
        <p class="card-text mb-1"><strong>Edited:</strong> @(Model.Edited.HasValue ? (Model.Edited.Value ? "Yes" : "No") : "")</p>
        <p class="card-text mb-1"><strong>Lent To:</strong> @Model.LentTo</p>
        <p class="card-text mb-0"><strong>Notes:</strong> @Model.Notes</p>
    </div>
    </div>

<form asp-action="Delete" method="post">
    <input asp-for="Id" type="hidden" />

    <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>

